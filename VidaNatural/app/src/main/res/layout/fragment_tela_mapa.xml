<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO: Update blank fragment layout -->

    <data>
        <variable
            name="pic"
            type="com.ljl.vidanatural.model.Pic"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/produto_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mapa_img_foto"
                    android:layout_width="143dp"
                    android:layout_height="124dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/mapa_txt_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/mapa_img_foto"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="@{pic.nome}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Nome da PIC" />

                <TextView
                    android:id="@+id/mapa_txt_dist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/mapa_img_foto"
                    android:layout_below="@id/mapa_txt_nome"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="@{pic.nome}"
                    android:textSize="12sp"
                    tools:text="Distancia" />

                <TextView
                    android:id="@+id/mapa_txt_tel"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mapa_txt_dist"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/mapa_img_foto"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="@{pic.nome}"
                    android:textSize="12sp"
                    tools:text="Telefone:" />

                <TextView
                    android:id="@+id/mapa_txt_hora"
                    android:layout_width="271dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mapa_txt_tel"
                    android:layout_marginStart="1dp"
                    android:layout_toEndOf="@id/mapa_img_foto"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="@{pic.nome}"
                    android:textSize="12sp"
                    tools:text="Horario:" />

                <TextView
                    android:id="@+id/mapa_txt_end"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mapa_txt_hora"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@id/mapa_img_foto"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="@{pic.nome}"
                    android:textSize="12sp"
                    tools:text="EndereÃ§o:" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</layout>